<h3 class="text-center font-weight-bold mt-2" style="color:#516F7F!important">Dashboard</h3>
<hr>
<div class="modal" tabindex="-1" role="dialog" id="Mymodal">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Sharing My Registry to</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">

          </div>
          <div class="modal-footer">
            <button type="button" class="btn sharedModal btn-success" data-dismiss="modal"><span class="fas fa-share float-right">Share</span></button>
          </div>
        </div>
      </div>
    </div>

<div class = "container-fluid">
<div class="row mb-5 d-flex flex-row">
    <div class="col-lg-3">
        {{#if userPortfolio}}
        <div class="card">
            <img src="{{userPortfolio.photo}}" class="card-img-top">
            <div class="card-body text-center">
                <h5 class="card-title font-weight-bold" style="color:#516F7F!important">
                    {{userPortfolio.firstName}} {{userPortfolio.lastName}}</h5>
                <p class="card-text">A Web Development Guy</p>
            </div>
        </div>
        {{else}}
        {{/if}}
    </div>
    <div class="col-lg-5">
        <h5 class="text-center font-weight-bold" style="color:#516F7F!important">My Lists</h5>
        {{#each userRegistries}}
        <ul class="list-group">
            <li class="list-group-item">
                <a class="" style="color:#516F7F!important" href="/api/listItems/{{id}}">{{ListName}}
                    <span>                
                        <a href="/user/delete/{{id}}">
                    <i class="fas fa-trash float-right text-danger"></i>
                        </a>
                    </span>
                </a>
            </li>
        </ul>
        {{/each}}
        <div class="d-flex justify-content-center">
            <button id = "newList" class="btn btn-success submit btn-md mt-3 float-right" type="button" onclick="location.href='/create_list'">New Registry</button>
        </div>
    </div>
    <div class="col-lg-4">
        <h5 class="text-center font-weight-bold mb-0" style="color:#516F7F!important">Friends' Shared Lists</h5>
        {{#if userPortfolio}}
        <div class="card">
            <div class="card-body">
							<ul class="list-group">
                {{#each userPortfolio.Shareds}}
                   <li class="list-group-item border-0 text-center p-0"> 
				<a class="p-0" href="/client/list/{{ListId}}">List one</a>
										</li>
                {{/each}}
							</ul>
            </div>
        </div>
        {{else}}
        {{/if}}
    </div>
</div> 
</div>
